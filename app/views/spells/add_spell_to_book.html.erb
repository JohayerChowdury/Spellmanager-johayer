<h1>Add <%= @spell.name %> to Book</h1>

<%= link_to 'All Spells', spells_path %> |
<%= link_to 'Home', root_path %>

<br>
<br>

<%= form_with(model: @books_spells, local: true, method: 'add_book') do |form| %>
    <%= form.label "Select Book:" %>
    <%= form.select :book, Book.to_nested_array_for_select %>
    <%= form.submit "Submit" %>
<% end %>

