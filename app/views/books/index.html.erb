<p id="notice"><%= notice %></p>

<h1>All Books</h1>

<%= link_to 'Create New Book', new_book_path %> |
<%= link_to 'Home', root_path %>

<br>
<br>

<table>
  <thead>
    <tr>
      <th><%= link_to 'Spell Count', books_path(order_by: 'count') %></th>
      <th><%= link_to 'Name', books_path(order_by: 'name') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.spells.count %></td>
        <td><%= link_to "#{book.name}", book %></td>
        <td><%= form_with model: book, local: true, method: 'delete' do |f| %>
                <%= f.submit "Delete Book" %>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
